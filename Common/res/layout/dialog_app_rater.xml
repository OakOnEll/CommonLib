<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/rate_bar"
        android:numStars="5"
        android:rating="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rate_redirect_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_redirects_to_market"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/rate_remind_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_remind_later" />

    <Button
        android:id="@+id/rate_no_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_no_thanks" />

</LinearLayout>
